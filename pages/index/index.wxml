<!--index.wxml-->
<view class="container">
  <image src="../../assets/image/6.png" class="bg" />
  <image src="../../assets/image/2.png" class="kettle" animation="{{animationKettle}}" bindtap="watering" bindanimationiteration="animationend"/>
  <text class="raindrop-tips">今日已浇水</text>
  <image src="../../assets/image/5.png" class="raindrop" animation="{{animationRaindrop}}" />

  <view class="notice-bar">
  点击 <text class="banner-more-icon"></text>添加到我的小程序，每天浇水领现金<text class="banner-thumb-icon"></text>
  </view>
  <view class="tips">
    <van-tag mark color="#6190E8" class="tag" size="large">
      <view class="tag-text"><text>已连续浇水175天</text></view>
    </van-tag>
    <van-tag mark color="#6190E8" class="tag1" size="large">
      <view class="tag-text1" bindtap="toRule"><text>浇水规则</text></view>
    </van-tag>
  </view>
  <view class="footer">
    <view class="row">
      <view class="card">
        <text>新人福利：<text class="money">￥1000</text>（1/365）</text>
        <van-progress percentage="50" color="#6190E8" show-pivot="{{false}}" class="progess" />
        <text>喂羊满365天即可提现</text>
      </view>
      <view class="right">
        <van-button round type="primary" size="small" custom-class="cus-btn" class="cus-btn-warp tx-btn" disabled>提现</van-button>
        <text class="need-days">还需喂羊364天</text>
      </view>
    </view>

    <view class="row disabled">
        <view class="card">
          <text>限时福利：<text class="money">￥1.00</text></text>
          <van-progress percentage="0" show-pivot="{{false}}" class="progess" />
        </view>
        <van-button round type="primary" size="small" custom-class="cus-btn" class="cus-btn-warp">点击领取</van-button>
        <image mode='aspectFit' class="lock" src="../../assets/image/lock.png" />
      </view>

      <view class="row disabled">
        <view class="card">
          <text>专享福利：<text class="money">￥200</text></text>
          <van-progress percentage="0" show-pivot="{{false}}" class="progess" />
        </view>
        <van-button round type="primary" size="small" custom-class="cus-btn" class="cus-btn-warp" >点击领取</van-button>
        <image mode='aspectFit' class="lock" src="../../assets/image/lock.png" />
      </view>

      <view class="bottom-change-list__ad">
        <ad unit-id="adunit-4ffe795461054bab"></ad>
      </view>
    </view>
    <van-dialog
      use-slot
      show="{{ taskDialog }}"
      show-confirm-button="{{false}}"
      close-on-click-overlay="{{true}}"
    >
      <!-- bind:close="onClose"
      bind:getuserinfo="getUserInfo" -->
      <view class="task-dialog">
        <text class="title">请完成以下任务再浇水</text>
        <text class="tasks">今日任务（0/2）</text>
        <view class="ad-warp">
          <view class="tips">
            <image src="../../assets/image/handle2.png" class="handle" />
            <text>点击图片，10秒后返回即可</text>
          </view>
          <view>
            <ad unit-id="adunit-4ffe795461054bab"></ad>
          </view>
        </view>
        <view class="ad-warp">
          <view class="tips">
            <image src="../../assets/image/handle2.png" class="handle" />
            <text>点击图片，10秒后返回即可</text>
          </view>
          <view class="outside-app">
            <view>
              <text class="slogan">体验</text>
              <text class="app-name-ad">天天喂羊</text>
              <text class="slogan">小程序</text>
            </view>
            <view class="circle">
              <text>GO</text>
            </view>
          </view>
        </view>
        <van-button disabled round type="primary">完成上述任务并浇水</van-button>
      </view>
    </van-dialog>
    <image src="../../assets/image/4.png" class="new" animation="{{animationAuth}}" wx:if="{{showPacket}}" />
    <image src="../../assets/image/3.png" class="new1" bindtap="closeModal" animation="{{animationAmount}}" />
    <button bindgetuserinfo="bindGetUserInfo" class='login' plain openType="getUserInfo" wx:if="{{showPacket}}"></button>
    <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showMask}}"></view>
    <button wx:if="{{canIUse}}" bindgetuserinfo="bindGetUserInfo" class='login' openType="getUserInfo">登录</button>
</view>
