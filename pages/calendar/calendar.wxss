.consecutive-days {
  text-align: center;
  margin: 10px 0;
}
.calendar_title {
  width: 70%;
  margin: 10rpx auto;
  justify-content: space-between;
  font-size: 14px;
  color: #fff;
  display: flex;
}

.calendar_title .icon image {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx auto;
}
.current-date {
  color: #000;
  font-size: 14px;
}
/* 日历 */
.calendar {
  width: 100%;
  background: #fff;
  padding-bottom: 15px;
}

.header {
  font-size: 0;
  margin: 0 auto;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: #666;
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx 0;
}

.weekMark {
  position: relative;
  margin: 0 auto;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 2px solid #69f;
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
  margin: 0 auto;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #666;
  text-align: center;
  vertical-align: middle;
}

.date-head {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12pt;
}

.nowDay .date-head {
  width: 80rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background-color: #ff9933;
  margin: 0 auto;
}
.disable {
  color: #ccc;
}

.to-feed-sheep {
  padding: 0 20%;
}
.replenish {
  background: #fff;
  display: flex;
  justify-content: space-around;
  margin: 0 5%;
  padding: 10px 5px;
  border-left:#FF4114 solid 10rpx;
}
.replenish .card {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  font-size: 12px;
}
.footer {
  background: #F7F8FA;
  padding-top: 20px;
}