.container {
  background: #F7F8F9;
}
.title {
  margin:10px 5%;
  font-size: 16px;
}
.row {
  margin:10px 5%;
  border-radius: 2px;
  box-shadow:0px 3px 3px #999;

}
.avatar_wrap {
  display: flex;
}
.avatar_wrap image {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  margin-right: 5px;
}
.avatar_wrap .info {
  display: flex;
  flex-direction: column;
}
.info .date {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.desc {
  display: flex;
  flex-direction: column;
  text-align-last: right;
}
.desc .tip {
  font-size: 12px;
  color: #999;
}